<Window x:Class="IsRequiredDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:IsRequiredDemo="clr-namespace:IsRequiredDemo"    
    Title="Window1" Height="300" Width="300">    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Content="First Input" />
        <TextBox x:Name="textBox1" Grid.Row="0" Grid.Column="1" Text="First Input" />
        
        <Label Grid.Row="1" Grid.Column="0" Content="Second Input" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="Second Input" IsRequiredDemo:IsRequiredBehavior.IsRequired="True" />        
        
    </Grid>
</Window>
